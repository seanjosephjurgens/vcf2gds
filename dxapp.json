{
  "name": "vcf2gds",
  "title": "VCF to PLINK2 Converter",
  "summary": "Converts a VCF file to a PLINK2 files",
  "dxapi": "1.0.0",
  "version": "0.0.3",
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "VCF to convert",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": "Name of VCF file to convert"
    },
    {
      "name": "gds_filename",
      "label": "Prefix of PLINK2 file to output",
      "class": "string",
      "optional": false,
      "help": "Prefix of PLINK2 output file"
    },
    {
      "name": "parallel",
      "label": "Number of parallel processes for conversion",
      "class": "int",
      "optional": true,
      "default": 16,
      "help": ""
    },
    {
      "name": "sex_info_file",
      "label": "Sample sex information file in PLINK format with headers",
      "class": "string",
      "optional": true,
      "patterns": [
        "*"
      ],
      "default": "NA",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "pgen",
      "label": "PLINK2 pgen file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pvar",
      "label": "PLINK2 pvar file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "psam",
      "label": "PLINK2 psam file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 72
      }
    },
    "interpreter": "bash",
    "file": "src/vcf2gds.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x16"
        }
      }
    }
  }
}
